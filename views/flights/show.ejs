<%- include('../partials/header') %>

<table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departs</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
        </tr>
    </tbody>
</table>



<br><br><h2>Reviews</h2>
<form id="add-detail-form" method="POST"
  action="/flights/<%= flight._id %>?_method=PUT">
  <label>Arrival Date<input name="arrival" type ="date"></label>
  
  <label>Airport:</label>
  <select name="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN" selected>SAN</option>
  </select>
  <input type="submit" value="Add Arrival">
</form>

<h2>Destinations</h2>
<table>
     
    <thead>
      <tr>
        <th>Arrival Airport</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
        <%destinations.forEach(function(destination) { %>
            <tr>
                <td><%= destination.airport %></td>
                <td><%= destination.arrival %></td>
            </tr>   
        <%}) %>
       
    </tbody>
</table>


<%- include('../partials/footer') %>
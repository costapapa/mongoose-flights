<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Departs</th>
    </tr>
  </thead>
  <tbody>
     <% flights.forEach(function(m){ %>
      
      <tr>
        <td><%= m.airline %></td>
        <td><%= m.airport %></td>
        <td><%= m.flightNo %></td>
        <td><%= m.departs %></td>
        <td><form action="/flights/<%=m.id %>" method="GET">
          <label><a href="/flights/<%=m.id %>">Show Flight Details</a></label></form></td>
      </tr>
      <% }) %> 
   
  </tbody>
</table>

<%- include('../partials/footer') %>
